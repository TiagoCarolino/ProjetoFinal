        <label for="name" class="form-label">Created At:</label>
        <input type="datetime" class="form-control" id="exampleFormControlInput1" placeholder="Created At" @bind-value="StockModel.CreatedAt" />
    </div>*@
    <p></p>
    <button type="submit" class="btn btn-primary">Create</button>

</EditForm>
