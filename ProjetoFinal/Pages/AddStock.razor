@page "/createstock"

<h3>Add Stock</h3>

<EditForm Model ="StockModel" OnValidSubmit="OnCreateStock">
    <div class="mb-3">
        <label for="categories">Product:</label>
        <br />
        <select @onchange="OnselectChanged">
            <option value="0">Select a Product</option>
            @foreach (var item in Products)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label for="quantity" class="form-label">Quantity:</label>
        <input type="number" class="form-control" id="exampleFormControlInput1" placeholder="Quantity" @bind-value="StockModel.Quantity" />
    </div>
